<Window x:Class="ItSD_project_wpf.AngleDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New simulation..." Height="120" Width="300" ResizeMode="NoResize" WindowStyle="ToolWindow" ShowInTaskbar="False">
    <Grid>
        <Slider x:Name="AngleSlider" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Width="220" Maximum="90" SmallChange="0.01" Value="45"/>
        <Label Content="Select inclination angle of the slippery slope" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="117,57,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="OK_Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="197,57,0,0" VerticalAlignment="Top" Width="75" IsCancel="True"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="235,29,0,0" TextWrapping="Wrap" Text="{Binding Value, ElementName=AngleSlider, Mode=TwoWay, StringFormat=\{0:F2\}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="49" IsReadOnlyCaretVisible="True" BorderBrush="{x:Null}"/>

    </Grid>
</Window>
